generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  createAt DateTime @default(now())
  credentials Credential[]

  @@map("users")
}

model Service {
  id   Int    @id @default(autoincrement())
  name String @unique
  createAt DateTime @default(now())
  credentials Credential[]
  
  @@map("services")
}

model Credential {
  id        Int    @id @default(autoincrement())
  user      User   @relation(fields: [userId], references: [id])
  userId    Int
  service   Service @relation(fields: [serviceId], references: [id])
  serviceId Int
  password  String
  username  String
  title     String
  url       String
  createAt DateTime @default(now())

  @@unique([title, username])
  @@map("credentials")
}
